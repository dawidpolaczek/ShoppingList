@model ShoppingList.ViewModels.Basket.BasketDetailsViewModel

@{
    ViewData["Title"] = "Delete a basket";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Basket</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DayEveryWeek)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DayEveryWeek)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NextShoppingDateStr)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NextShoppingDateStr)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Shop)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Shop == null)
            {
                <p>undefined</p>
            }
            else
            {
                <a class="link-dark" asp-controller="Shops" asp-action="Details" asp-route-id="@Model.Shop.Item1">
                    @Model.Shop.Item2
                </a>
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Products)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Products == null)
            {
                <p>no products</p>
            }
            else
            {
                <ul>
                    @foreach (var product in Model.Products)
                    {
                        <li>
                            <a class="link-dark" asp-controller="Products" asp-action="Details" asp-route-id="@product.Item1">
                                @product.Item2
                            </a>
                        </li>
                    }
                </ul>
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="BasketId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-secondary btn-sm">Back to baskets</a>
    </form>
</div>

@model ShoppingList.Models.BasketShopViewModel

@{
    ViewData["Title"] = "Baskets";
}


<h1>Baskets</h1>

<p>
    <a asp-action="Create">Create a basket</a>
</p>

<form asp-controller="Baskets" asp-action="Index" method="get">
    <p>
        <select asp-for="ShopName" asp-items="Model.Shops">
            <option value="">All</option>
        </select>

        Name: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Search"/>
    </p>
</form>

@if (Model.Baskets != null && Model.Baskets.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Baskets!.First().Name)</th>
                <th>@Html.DisplayNameFor(model => model.Baskets!.First().DayOfWeek)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var basket in Model.Baskets)
            {
                <tr>
                    <td>@Html.DisplayFor(item => basket.Name)</td>
                    <td>@Html.DisplayFor(item => basket.DayOfWeek)</td>
                    <td>
                        <a asp-action="Details" asp-route-id=@basket.Id>Details</a>
                        <a asp-action="Edit" asp-route-id=@basket.Id>Edit</a>
                        <a asp-action="Remove" asp-route-id=@basket.Id>Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No baskets found.</p>
}

